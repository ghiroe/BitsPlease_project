<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gavin.project327.gameHub"
    android:background="#80ABCDEF">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backButton"
        android:src="@drawable/pausebutton"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/life1"
        android:src="@drawable/bingbongw_hat"
        android:scaleType="fitXY"
        android:layout_below="@+id/backButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/life2"
        android:src="@drawable/bingbongw_hat"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/life1"
        android:layout_toLeftOf="@+id/life1"
        android:layout_toStartOf="@+id/life1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/life3"
        android:layout_toEndOf="@+id/life1"
        android:src="@drawable/bingbongw_hat"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/life1"
        android:layout_toRightOf="@+id/life1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SCORE"
        android:id="@+id/score"
        android:textSize="45dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/life1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/number_score"
        android:textSize="50dp"
        android:singleLine="true"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

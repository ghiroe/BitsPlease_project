<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gavin.project327" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true">
        <activity
            android:name="com.example.gavin.project327.StartMenu"
            android:label="@string/game_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gavin.project327.gameHub"
            android:label="@string/game_hub"
            android:parentActivityName="com.example.gavin.project327.StartMenu"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gavin.project327.StartMenu" />
        </activity>
        <activity
            android:name="com.example.gavin.project327.MainActivity"
            android:label="@string/game1"
            android:parentActivityName="com.example.gavin.project327.gameHub"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gavin.project327.StartMenu" />
        </activity>
        <activity
            android:name="com.example.gavin.project327.wires_game"
            android:label="@string/game2"
            android:parentActivityName="com.example.gavin.project327.gameHub"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gavin.project327.StartMenu" />
        </activity>
        <activity
            android:name="com.example.gavin.project327.math_game"
            android:label="@string/title_activity_math_game"
            android:parentActivityName="com.example.gavin.project327.gameHub"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gavin.project327.gameHub" />
        </activity>
    </application>

</manifest>
